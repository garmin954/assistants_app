{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "UFACTORY Assistant",
  "version": "1.1.0",
  "identifier": "com.arm-assistants.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1530",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "windows": {
      "wix": {
        "language": "zh-CN"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": []
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlDRTQxQzQwRDkwNTMyODUKUldTRk1nWFpRQnprbkxxdk4reEI0WVN6SEpaRVlKQm04KzZ6WHFjZURkUVF4YWNWYTdES1QrZ3EK",
      "endpoints": [
        "http://192.168.1.19/releases/xarm/assistant/releases.json",
        "https://github.com/garmin954/assistants_app/releases/latest/download/latest.json"
      ],
      "dangerousInsecureTransportProtocol": true
    }
  }
}